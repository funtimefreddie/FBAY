<p id="notice"><%= notice %></p>
<div class ="panel panel-info"> 
  <div class = "panel panel-heading">
    <p>
      <strong>Name:</strong>
      <%= @item.name %>
    </p>
  </div>
  <div class ="panel panel-body">
  <p>
    <%= image_tag @item.picture_url(:preview).to_s %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @item.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @item.user.name %>
  </p>
  <p>

  <p>
    <strong>Category:</strong>
    <%= Category.find(@item.category_id).name %>
  </p>
 
  <div class="panel panel-footer"> 
    <strong>Time left:</strong>
    <%= @item.time_present %>
</div>
</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= link_to "Amount", :sort => "amount" %></th>     
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item.bids.order("amount desc").each do |bid| %>
      <tr>
        <td><%= bid.amount %></td>      
        <td><%= bid.user.name %></td>       
      </tr>
    <% end %>
  </tbody>
</table>


<% if @item.user != current_user %> 
  <%= link_to 'New Bid', new_item_bid_path(:item_id => @item.id) %><br>
  <%= link_to 'Back', items_path %><br>  
<% else %>  
  <%= link_to 'Back', my_items_path %><br>
<% end %>

<% if can? :update, @item %>
  <%= link_to 'Edit', edit_item_path(@item) %><br>
<% end %>


