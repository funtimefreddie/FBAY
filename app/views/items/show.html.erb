<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>
<p>
<div>
  <%= image_tag(@item.image)%>
</div>
<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find(@item.category_id).name %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag @item.picture_url(:preview).to_s %>
</p>

<p>
  <strong>Time left:</strong>
  <%= @item.time_present %>
 
</p>

<p>
  <strong>User:</strong>
  <%= @item.user.name %>
</p>

<table>
  <tr>
    <th><%= link_to "User" %></th>
    <th><%= link_to "Bid" %></th>
  </tr>
  <% @item.bids.sort_by &:amount do |b| %>
  <tr>
    <td><%= link_to b.user.name, b.user %></td>
    <td><%= number_to_currency(b.amount) %></td>
  </tr>
  <% end %>
</table>

<% if @item.user != current_user %>
  <%= link_to 'New Bid', new_item_bid_path(:item_id => @item.id) %><br>
<% end %>


<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
